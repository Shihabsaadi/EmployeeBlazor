@using EmployeeManagementWeb.SalesAreaModel
@typeparam TItem
@if(ListFor==ListFor.SideMenu)
{
 <ul class="nav flex-column">
    @foreach (var item in Items)
    {
        @Row(item);
    }
</ul>   
}
    @code {
        [Parameter]
        public RenderFragment<TItem> Row { get; set; }
        [Parameter]
        public List<TItem> Items { get; set; }
        [Parameter]
        public ListFor ListFor { get; set; }
    }